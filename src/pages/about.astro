						{ icon: Palette, title: 'Designers', description: 'Criação visual e identidade de marca' },
						{ icon: ShoppingBag, title: 'Especialistas em Procurement', description: 'Gestão de aquisições e compras' },
						{ icon: Map, title: 'Planificadores Territoriais', description: 'Ordenamento e planeamento territorial' },
