<script>
	if (typeof window !== 'undefined') {
		const observerOptions = {
			threshold: 0.1,
			rootMargin: '0px 0px -50px 0px'
		};

		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					const delay = entry.target.style.getPropertyValue('--animation-delay') || '0s';
					entry.target.style.animationDelay = delay;
					entry.target.classList.add('animate-on-scroll-visible');
					observer.unobserve(entry.target);
				}
			});
		}, observerOptions);

		setTimeout(() => {
			document.querySelectorAll('.animate-on-scroll').forEach(el => {
				observer.observe(el);
			});
		}, 100);
	}
</script>

<style is:global>
	.animate-on-scroll {
		opacity: 0;
		transform: translateY(30px);
		transition: opacity 0.8s ease-out, transform 0.8s ease-out;
	}
	
	.animate-on-scroll-visible {
		opacity: 1 !important;
		transform: translateY(0) !important;
	}

	/* 3D Effects Container */
	.team-3d-container,
	.diff-3d-container {
		perspective: 1000px;
	}

	/* Team Cards 3D */
	.team-card-3d {
		transform-style: preserve-3d;
		transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
		position: relative;
		backface-visibility: hidden;
	}

	.team-card-3d::before {
		content: '';
		position: absolute;
		inset: 0;
		border-radius: 1rem;
		background: linear-gradient(135deg, rgba(255, 184, 0, 0.1) 0%, transparent 50%);
		opacity: 0;
		transition: opacity 0.4s ease;
		pointer-events: none;
		z-index: -1;
	}

	.team-card-3d {
		--rotate-x: 0deg;
		--rotate-y: 0deg;
	}

	.team-card-3d:hover {
		transform: translateY(-10px) rotateX(calc(5deg + var(--rotate-x))) rotateY(var(--rotate-y)) scale(1.05);
		box-shadow: 
			0 20px 40px rgba(0, 0, 0, 0.3),
			0 0 30px rgba(255, 184, 0, 0.3),
			0 0 60px rgba(255, 184, 0, 0.2);
	}

	.team-card-3d:hover::before {
		opacity: 1;
	}

	/* Differentiators Cards 3D */
	.diff-card-3d {
		transform-style: preserve-3d;
		transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
		position: relative;
		backface-visibility: hidden;
	}

	.diff-card-3d::before {
		content: '';
		position: absolute;
		inset: -2px;
		border-radius: 1.5rem;
		background: linear-gradient(135deg, rgba(255, 184, 0, 0.2) 0%, rgba(255, 184, 0, 0.05) 50%, transparent 100%);
		opacity: 0;
		transition: opacity 0.5s ease;
		pointer-events: none;
		z-index: -1;
		filter: blur(10px);
	}

	.diff-card-3d {
		--rotate-x: 0deg;
		--rotate-y: 0deg;
	}

	.diff-card-3d:hover {
		transform: translateY(-15px) rotateX(calc(8deg + var(--rotate-x))) rotateY(var(--rotate-y)) scale(1.08);
		box-shadow: 
			0 25px 50px rgba(0, 0, 0, 0.4),
			0 0 40px rgba(255, 184, 0, 0.4),
			0 0 80px rgba(255, 184, 0, 0.3),
			inset 0 0 30px rgba(255, 184, 0, 0.1);
	}

	.diff-card-3d:hover::before {
		opacity: 1;
	}

	/* Icon 3D Effect */
	.icon-3d {
		transform-style: preserve-3d;
		transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
	}

	.team-card-3d:hover .icon-3d,
	.diff-card-3d:hover .icon-3d {
		transform: translateZ(20px) rotateY(360deg) scale(1.15);
		filter: drop-shadow(0 0 15px rgba(255, 184, 0, 0.6));
	}

	/* Mobile adjustments */
	@media (max-width: 768px) {
		.team-card-3d:hover,
		.diff-card-3d:hover {
			transform: translateY(-5px) scale(1.02);
		}
	}

	/* Smooth parallax effect on scroll */
	@supports (transform-style: preserve-3d) {
		.team-card-3d,
		.diff-card-3d {
			will-change: transform;
		}
	}
</style>

<script>
	// Enhanced 3D mouse tracking effect
	if (typeof window !== 'undefined') {
		document.addEventListener('DOMContentLoaded', () => {
			const cards = document.querySelectorAll('.team-card-3d, .diff-card-3d');
			
			cards.forEach(card => {
				card.addEventListener('mousemove', (e) => {
					const rect = card.getBoundingClientRect();
					const x = e.clientX - rect.left;
					const y = e.clientY - rect.top;
					
					const centerX = rect.width / 2;
					const centerY = rect.height / 2;
					
					const rotateX = (y - centerY) / 10;
					const rotateY = (centerX - x) / 10;
					
					card.style.setProperty('--rotate-x', `${rotateX}deg`);
					card.style.setProperty('--rotate-y', `${rotateY}deg`);
				});
				
				card.addEventListener('mouseleave', () => {
					card.style.setProperty('--rotate-x', '0deg');
					card.style.setProperty('--rotate-y', '0deg');
				});
			});
		});
	}
</script>

