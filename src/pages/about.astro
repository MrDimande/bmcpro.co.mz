						{ icon: Search, title: 'Pesquisadores', description: 'Estudos técnicos e análises' }
					].map((member, index) => {
						const IconComponent = member.icon;
						return (
							<div class="glass-dark rounded-2xl p-6 border border-gold-500/20 animate-on-scroll text-center team-card-3d" style={`animation-delay: ${index * 0.1}s;`}>
								<div class="w-16 h-16 rounded-full bg-gradient-to-br from-gold-600/20 to-gold-500/10 flex items-center justify-center mb-4 mx-auto glow-gold icon-3d">
									<IconComponent class="w-8 h-8 text-gold-500" stroke-width="1.5" />
								</div>
