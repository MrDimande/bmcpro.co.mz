---
import { Clock, CheckCircle2, Users } from 'lucide-astro';
---
<div class="my-12 relative group">
  <div class="absolute inset-0 bg-gradient-to-r from-gold-600/20 to-gold-500/10 rounded-2xl blur-xl transition-all duration-500 group-hover:blur-2xl"></div>
  
  <div class="relative bg-dark-200 border border-gold-500/30 rounded-2xl p-8 overflow-hidden">
    <div class="absolute top-0 left-0 w-2 h-full bg-gold-500"></div>
    
    <div class="mb-8">
      <span class="text-gold-500 text-xs font-bold uppercase tracking-widest border border-gold-500/30 px-3 py-1 rounded-full">Caso de Sucesso</span>
      <h3 class="text-2xl font-bold text-white mt-4">Conselho Municipal de Marracuene</h3>
      <p class="text-gray-400 text-sm mt-2">Resultados da implementação de sistemas de gestão digital</p>
    </div>

    <div class="grid md:grid-cols-3 gap-6">
      <!-- Stat 1 -->
      <div class="bg-dark-300/50 p-6 rounded-xl border border-white/5 hover:border-gold-500/30 transition-colors group/stat">
        <div class="w-12 h-12 rounded-full bg-blue-500/20 flex items-center justify-center mb-4 group-hover/stat:scale-110 transition-transform">
          <Clock class="w-6 h-6 text-blue-400" />
        </div>
        <div class="text-3xl font-bold text-white mb-1">-40%</div>
        <div class="text-xs text-gray-400 uppercase tracking-wide">Tempo de Processamento</div>
      </div>

      <!-- Stat 2 -->
      <div class="bg-dark-300/50 p-6 rounded-xl border border-white/5 hover:border-gold-500/30 transition-colors group/stat">
        <div class="w-12 h-12 rounded-full bg-green-500/20 flex items-center justify-center mb-4 group-hover/stat:scale-110 transition-transform">
          <CheckCircle2 class="w-6 h-6 text-green-400" />
        </div>
        <div class="text-3xl font-bold text-white mb-1">+60%</div>
        <div class="text-xs text-gray-400 uppercase tracking-wide">Precisão de Dados</div>
      </div>

      <!-- Stat 3 -->
      <div class="bg-dark-300/50 p-6 rounded-xl border border-white/5 hover:border-gold-500/30 transition-colors group/stat">
        <div class="w-12 h-12 rounded-full bg-gold-500/20 flex items-center justify-center mb-4 group-hover/stat:scale-110 transition-transform">
          <Users class="w-6 h-6 text-gold-500" />
        </div>
        <div class="text-3xl font-bold text-white mb-1">+35%</div>
        <div class="text-xs text-gray-400 uppercase tracking-wide">Satisfação do Cidadão</div>
      </div>
    </div>
  </div>
</div>
