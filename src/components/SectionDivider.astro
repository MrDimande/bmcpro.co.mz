---
interface Props {
	variant?: 'default' | 'gold' | 'minimal';
}

const { variant = 'default' } = Astro.props;
---

<div class={`section-divider section-divider-${variant}`}>
	<div class="divider-line"></div>
	<div class="divider-glow"></div>
</div>

<style>
	.section-divider {
		position: relative;
		height: 1px;
		width: 100%;
		overflow: hidden;
		margin: 4rem 0;
	}

	.divider-line {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 1px;
		background: linear-gradient(
			90deg,
			transparent 0%,
			rgba(255, 184, 0, 0.3) 20%,
			rgba(255, 184, 0, 0.5) 50%,
			rgba(255, 184, 0, 0.3) 80%,
			transparent 100%
		);
		transform: translateX(-100%);
		animation: divider-sweep 3s ease-in-out infinite;
	}

	.divider-glow {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 200px;
		height: 2px;
		background: radial-gradient(circle, rgba(255, 184, 0, 0.6) 0%, transparent 70%);
		animation: divider-pulse 2s ease-in-out infinite;
	}

	@keyframes divider-sweep {
		0%, 100% {
			transform: translateX(-100%);
		}
		50% {
			transform: translateX(100%);
		}
	}

	@keyframes divider-pulse {
		0%, 100% {
			opacity: 0.3;
			width: 200px;
		}
		50% {
			opacity: 0.8;
			width: 400px;
		}
	}

	.section-divider-gold .divider-line {
		background: linear-gradient(
			90deg,
			transparent 0%,
			rgba(255, 184, 0, 0.5) 20%,
			rgba(255, 184, 0, 0.8) 50%,
			rgba(255, 184, 0, 0.5) 80%,
			transparent 100%
		);
	}

	.section-divider-minimal {
		height: 0.5px;
		margin: 2rem 0;
	}

	.section-divider-minimal .divider-line {
		background: linear-gradient(
			90deg,
			transparent 0%,
			rgba(255, 184, 0, 0.2) 50%,
			 transparent 100%
		);
	}
</style>

