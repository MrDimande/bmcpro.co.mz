---
import { Target, Cpu, Megaphone, Check } from 'lucide-astro';

const services = [
	{
		icon: Target,
		title: 'Consultoria Estratégica',
		description: 'Apoiamos organizações na definição de metas, estratégias e planos de ação alinhados à realidade do mercado e ao futuro desejado pela instituição.',
		features: ['Diagnóstico organizacional', 'Planeamento estratégico', 'Gestão de performance']
	},
	{
		icon: Cpu,
		title: 'Inovação Digital & Smart Solutions',
		description: 'Integramos ferramentas tecnológicas que aceleram processos, melhoram decisões e trazem eficiência às operações.',
		features: ['Digitalização de processos', 'Soluções de georreferenciação', 'Web development e sistemas']
	},
	{
		icon: Megaphone,
		title: 'Comunicação & Branding',
		description: 'Criamos identidade visual, campanhas e materiais que reforçam a presença das marcas e facilitam a comunicação com o público-alvo.',
		features: ['Identidade visual e branding', 'Gestão de redes sociais', 'Estratégias de comunicação']
	}
];
---

<section id="services" class="py-20 relative overflow-hidden">
	<div class="container mx-auto px-6 relative z-10">
		<h2 class="text-4xl md:text-5xl font-bold text-center mb-16">
			<span class="text-white">Our</span>
			<span class="text-gold-500"> Services</span>
		</h2>

		<div class="grid md:grid-cols-3 gap-8">
			{services.map((service, index) => {
				const IconComponent = service.icon;
				return (
					<div class="parallax-card-wrapper animate-on-scroll" style={`--animation-delay: ${index * 0.15}s`}>
						<div class="card-metallic rounded-3xl p-8 transition-all duration-300 transform hover:-translate-y-1 hover:scale-105">
							<div class="w-20 h-20 rounded-full bg-gradient-to-br from-gold-600/20 to-gold-500/10 flex items-center justify-center mb-6 mx-auto glow-gold">
								<IconComponent class="w-10 h-10 text-gold-500" stroke-width="1.5" />
							</div>
							<h3 class="text-2xl font-bold text-gold-500 mb-4 text-center">{service.title}</h3>
							<p class="text-gray-300 leading-relaxed text-center text-sm mb-4">{service.description}</p>
							<ul class="space-y-2 mb-6">
								{service.features.map((feature) => (
									<li class="text-gray-400 text-sm flex items-center gap-2">
										<Check class="w-4 h-4 text-gold-500" stroke-width="2.5" />
										{feature}
									</li>
								))}
							</ul>
							<a href="/services" class="w-full px-6 py-3 rounded-xl bg-gradient-to-r from-gold-600 to-gold-500 text-dark-200 font-semibold hover:glow-gold-lg transition-all transform hover:scale-105 text-center block">
								Explore More
							</a>
						</div>
					</div>
				);
			})}
		</div>
	</div>
</section>


