---
import { Mail, Phone, MapPin } from 'lucide-astro';
---

<section id="contact" class="py-20 relative overflow-hidden">
	<!-- Background -->
	<div class="absolute inset-0 gradient-diagonal"></div>
	<div class="absolute top-0 right-0 w-96 h-96 bg-gold-500/5 rounded-full blur-3xl"></div>
	
	<div class="container mx-auto px-6 relative z-10">
		<h2 class="text-4xl md:text-5xl font-bold text-center mb-16">
			<span class="text-white">Contactos</span>
		</h2>

		<div class="max-w-4xl mx-auto">
			<div class="grid md:grid-cols-3 gap-8 mb-8">
				<!-- Email -->
				<div class="glass-dark rounded-3xl p-8 hover:glow-gold transition-all transform hover:scale-105 border border-gold-500/20 text-center animate-on-scroll">
					<div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-gold-600/30 to-gold-500/10 flex items-center justify-center mb-6 mx-auto glow-gold">
						<Mail class="w-8 h-8 text-gold-500" stroke-width="1.5" />
					</div>
					<h3 class="text-lg font-semibold text-gold-500 mb-3">Email</h3>
					<a href="mailto:geral@bmcpro.co.mz" class="text-gray-300 hover:text-gold-500 transition-colors break-all">
						geral@bmcpro.co.mz
					</a>
				</div>

				<!-- Telefone -->
				<div class="glass-dark rounded-3xl p-8 hover:glow-gold transition-all transform hover:scale-105 border border-gold-500/20 text-center animate-on-scroll" style="animation-delay: 0.1s;">
					<div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-gold-600/30 to-gold-500/10 flex items-center justify-center mb-6 mx-auto glow-gold">
						<Phone class="w-8 h-8 text-gold-500" stroke-width="1.5" />
					</div>
					<h3 class="text-lg font-semibold text-gold-500 mb-3">Telefone</h3>
					<div class="space-y-1">
						<a href="tel:+258820883478" class="block text-gray-300 hover:text-gold-500 transition-colors">
							82 088 3478
						</a>
						<a href="tel:+258848509143" class="block text-gray-300 hover:text-gold-500 transition-colors">
							84 850 9143
						</a>
					</div>
				</div>

				<!-- Localização -->
				<div class="glass-dark rounded-3xl p-8 hover:glow-gold transition-all transform hover:scale-105 border border-gold-500/20 text-center animate-on-scroll" style="animation-delay: 0.2s;">
					<div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-gold-600/30 to-gold-500/10 flex items-center justify-center mb-6 mx-auto glow-gold">
						<MapPin class="w-8 h-8 text-gold-500" stroke-width="1.5" />
					</div>
					<h3 class="text-lg font-semibold text-gold-500 mb-3">Localização</h3>
					<p class="text-gray-300">
						Avenida Julius Nyerere<br />
						Maputo
					</p>
				</div>
			</div>
			
			<!-- CTA Button -->
			<div class="text-center">
				<a href="/contact" class="inline-block px-8 py-4 rounded-xl bg-gradient-to-r from-gold-600 to-gold-500 text-dark-200 font-semibold hover:glow-gold-lg transition-all transform hover:scale-105">
					Enviar Mensagem
				</a>
			</div>
		</div>
	</div>
</section>

