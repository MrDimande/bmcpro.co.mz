# ==========================================
# BMC Pro Services - Environment Variables
# ==========================================
# Copie este ficheiro para .env e configure os valores

# Supabase Database
# Obtenha estas credenciais em: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL="https://YOUR-PROJECT-ID.supabase.co"
SUPABASE_ANON_KEY="YOUR_SUPABASE_ANON_KEY"

# JWT Secret (gere uma chave segura para produção)
# Pode gerar com: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="sua-chave-secreta-muito-segura-aqui-mude-em-producao"
JWT_EXPIRES_IN="7d"

# SMTP Configuration (Nodemailer)
# Para Gmail, use uma "App Password": https://support.google.com/accounts/answer/185833
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="seu-email@gmail.com"
SMTP_PASS="sua-senha-de-app"
SMTP_FROM="BMC Pro Services <noreply@bmcpro.co.mz>"
SMTP_TO="contacto@bmcpro.co.mz"

# Admin inicial (usado no seed)
ADMIN_EMAIL="admin@bmcpro.co.mz"
ADMIN_PASSWORD="admin123"
ADMIN_NAME="Administrador"

# App Config
NODE_ENV="development"
APP_URL="http://localhost:4321"
PUBLIC_API_URL="http://localhost:4321"
